{% extends 'admin/dashboard.html.twig' %}

{% block title %}Products index
{% endblock %}

{% block Admin %}
	<a class="btn btn-primary " href="{{ path('app_products_new')}}">Nouveau canard</a>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Gamme</th>
				<th>Pictures</th>
				<th>Action</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.nameProducts }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}â‚¬</td>
					<td>{{ product.gamme.nameGamme }}</td>
					<td>
						{% for picture in product.pictures %}
							{{ picture.namePicture }}
						{% endfor %}
					</td>
					<td>
						<a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>
					</td>
					<td>{{ include('products/_delete_form.html.twig') }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
