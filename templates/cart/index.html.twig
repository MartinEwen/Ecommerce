{% extends 'admin/dashboard.html.twig' %}

{% block title %}liste des Paniers
{% endblock %}

{% block Admin %}
	<h1>Cart index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nb</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for cart in carts %}
				<tr>
					<td>{{ cart.id }}</td>
					<td>{{ cart.nb }}</td>
					<td>
						<a href="{{ path('app_cart_delete', {'id': cart.id}) }}">delete</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
