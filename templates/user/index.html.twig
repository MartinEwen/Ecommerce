{% extends 'admin/dashboard.html.twig' %}

{% block title %}User index
{% endblock %}

{% block Admin %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Pseudo</th>
				<th>Email</th>
				<th>Name</th>
				<th>FirstName</th>
				<th>Address</th>
				<th>City</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.pseudo }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.name }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.address }}</td>
					<td>{{ user.city }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
